<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <translet name="/">
        <echo id="page">
            <item name="headline">Welcome to Aspectran Demo</item>
            <item name="teaser">
                The "Aspectran Demo" is a reference application created
                to show how to develop Aspectran applications following
                the recommended best practices.
            </item>
            <item name="include">home/main</item>
            <item name="style">plate solid</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/echo">
        <transform format="text">
            <template>${msg}</template>
        </transform>
    </translet>

</aspectran>
