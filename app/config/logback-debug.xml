<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include file="${aspectran.basePath}/logback-scheduler.xml"/>
    <include file="${aspectran.basePath}/logback-undertow.xml"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %d{yyyy-MM-dd HH:mm:ss} [%thread] %msg - %logger{30}.%M\(%line\)%n</pattern>
        </encoder>
    </appender>
    <appender name="DAEMON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %d{yyyy-MM-dd HH:mm:ss} [%thread] %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.aspectran" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.aspectran.core.component.session" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.quartz" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.eclipse.jetty" level="error" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="DAEMON"/>
    </root>
</configuration>