<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        An Aspectran configuration that defines translets to print
        request parameters and attributes directly to the console.
    </description>

    <translet name="echo1">
        <description style="apon">
            |It accepts parameters and print them to the console.
        </description>
        <parameters>
            <item name="param1" mandatory="false">${param1:hello}</item>
            <item name="param2" mandatory="true"/>
        </parameters>
        <transform type="text">
            <template engine="token" style="apon">
                |----------------------------------------------------------
                |The parameters you entered are:
                |   param1: ${param1}
                |   param2: ${param2}
                |----------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo2">
        <description style="apon">
            |
            |   It accepts parameters and print them to the console.
            |
        </description>
        <parameters>
            <item name="param1" mandatory="true">${prefix} - 1</item>
            <item name="param2">${prefix} - 2</item>
            <item name="param3">${prefix} - 3</item>
        </parameters>
        <transform type="text">
            <template engine="token" style="apon">
                |----------------------------------------------------------
                |The parameters you entered are:
                |   param1: ${param1}
                |   param2: ${param2}
                |   param3: ${param3}
                |----------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo3">
        <description style="apon">
            |
            |   It accepts parameters and print them to the console.
            |
        </description>
        <parameters>
            <item name="param1">first ${param1:12345}</item>
            <item name="param2">second ${param2:67890}</item>
            <item name="param3" mandatory="true">third ${param3-1} and ${param3-2}</item>
        </parameters>
        <attributes>
            <item name="attr1">fourth ${param4:blank}</item>
        </attributes>
        <transform type="text">
            <template engine="token" style="apon">
                |----------------------------------------------------------
                |The input parameters and attributes are as follows:
                |   param1: ${param1}
                |   param2: ${param2}
                |   param3: ${param3}
                |   attr1: @{attr1}
                |----------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo4">
        <parameters>
            <item name="id" mandatory="true"/>
            <item name="email" mandatory="true">${id}@${domain}</item>
            <item name="password" secret="true" value="${password:(none)}"/>
            <item name="attr3"/>
        </parameters>
        <attributes>
            <item name="attr1" mandatory="true">${id}@${domain}</item>
            <item name="attr2" mandatory="true" secret="true">${password}</item>
            <item name="attr3" mandatory="true">${attr3}</item>
        </attributes>
        <transform type="text">
            <template style="apon">
                |-------------------------------------------------------------------------
                |You have entered the following parameters:
                |   email: ${email}
                |   password: ${password}
                |   attr3: ${attr3}
                |These are the attributes to which the input parameters are assigned:
                |   attr1: @{attr1}
                |   attr2: @{attr2}
                |   attr3: @{attr3}
                |-------------------------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo5">
        <attributes>
            <item name="attr1" mandatory="true"/>
            <item name="attr2" mandatory="true"/>
            <item name="attr3" mandatory="true" secret="true"/>
        </attributes>
        <transform type="text">
            <template style="apon">
                |-------------------------------------------------------------------------
                |You have entered the following attributes:
                |   attr1: @{attr1}
                |   attr2: @{attr2}
                |   attr3: @{attr3}
                |-------------------------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo6">
        <parameters>
            <item name="param1" mandatory="true"/>
            <item name="param2" mandatory="true"/>
        </parameters>
        <attributes>
            <item name="attr1" mandatory="true">${param1}:${param2}</item>
            <item name="attr2" mandatory="true">${param2}:${param1}</item>
            <item name="attr3"/>
        </attributes>
        <transform type="text">
            <template style="apon">
                |-------------------------------------------------------------------------
                |You have entered the following parameters:
                |   param1: ${param1}
                |   param2: ${param2}
                |These are the attributes to which the input parameters are assigned:
                |   attr1: @{attr1}
                |   attr2: @{attr2}
                |   attr3: @{attr3}
                |-------------------------------------------------------------------------
            </template>
        </transform>
    </translet>

    <translet name="echo7">
        <parameters>
            <item name="param1" mandatory="true"/>
            <item name="param2" mandatory="true">${param1}:${param2}</item>
        </parameters>
        <attributes>
            <item name="attr1" mandatory="true">${param1}:${param2}</item>
            <item name="attr2" mandatory="true">${param2}:${param1}</item>
            <item name="attr3"/>
        </attributes>
        <transform type="text">
            <template style="apon">
                |-------------------------------------------------------------------------
                |You have entered the following parameters:
                |   param1: ${param1}
                |   param2: ${param2}
                |These are the attributes to which the input parameters are assigned:
                |   attr1: @{attr1}
                |   attr2: @{attr2}
                |   attr3: @{attr3}
                |-------------------------------------------------------------------------
            </template>
        </transform>
    </translet>

</aspectran>