<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        A collection of Translets for the main page.
    </description>

    <translet name="/">
        <echo id="page">
            <item name="headline">Welcome to Aspectran Demo</item>
            <item name="teaser">
                The "Aspectran Demo" is a reference application created
                to show how to develop Aspectran applications following
                the recommended best practices.
            </item>
            <item name="include">home/main</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/echo">
        <transform type="text">
            <template>${msg}</template>
        </transform>
    </translet>

</aspectran>